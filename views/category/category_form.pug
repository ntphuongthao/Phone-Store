extends ../layout

block content
    div.container(style="margin-top: 10rem; margin-bottom: 10rem; border: 2px solid black; padding: 2rem; border-radius: 16px;")
        h1=title
        form(method="POST" action='')
            div.form-group
                label(for='category') Category Name:
                input#category.form-control(type='text' placeholder='Category name' name='category' required='true' value=(undefined===category ? '' : category.name) )
                        
            
            button.btn.btn-warning(type='submit') Submit   

        if errors
            ul
            for error in errors
                li!= error.msg

    br
    br