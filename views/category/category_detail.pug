extends ../layout

block content
    h1(style='text-align: center;') #{category.name}

    if category_items.length > 0
        div.container.mt-5.mb-5
            div.row 
                for item in category_items
                    div.col-sm.border.mt-4.mb-4
                        img(src=item.image alt=item.name style="width: 30rem;")
                    div.col-sm.border.bg-light.mt-4.mb-4
                        h1.mt-2 #{item.name} 
                            span.badge(class=`badge-${item.description === "Available" ? 'success' : 'warning'}`) #{item.description}
                        span.badge.badge-danger(style="font-size:16px;") #{item.brand.name}
                        br
                        br
                        strong Number in stock:
                        span  #{item.numberInStock}
                        br
                        br
                        strong Price:
                        span  $#{item.price}
    else
        h4(style='text-align: center; color: red;') There are currently no products of this category!