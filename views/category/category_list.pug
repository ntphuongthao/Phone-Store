extends ../layout

block content
    div.mt-4.mb-2
        a(href='/categories/create' style="text-decoration: none;") 
            button.btn.btn-outline-dark.btn-lg.btn-block(type="button") Create a new Category
    br
    br
    div.container
        div.row.align-items-center
            for category in categories 
                div.col.container 
                    div.row.justify-content-center
                        a(href=category.url) 
                            button.btn.btn-dark #{category.name} 
                br

    br
    br