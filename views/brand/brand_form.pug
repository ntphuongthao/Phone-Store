extends ../layout

block content
    div.container(style="margin-top: 10rem; margin-bottom: 10rem; border: 2px solid black; padding: 2rem; border-radius: 16px;")
        h1=title
        form(method="POST" action='')
            div.form-group
                label(for='name') Brand Name:
                input#name.form-control(type='text' placeholder='Brand name' name='name' required='true' value=(undefined===brand ? '' : brand.name) )
                
            div.form-group
                label(for='image') Image Associated:
                input#image.form-control(type='text' placeholder='Image' name='image' required='true' value=(undefined===brand ? '' : brand.image))
            
            
            button.btn.btn-warning(type='submit') Submit   

        if errors
            ul
            for error in errors
                li!= error.msg

    br
    br